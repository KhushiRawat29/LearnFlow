  <body>
    <header class="header header-transparent" id="header-main">
      <!-- Main navbar -->
      <%- include('partials/navbar'); %>
    </header>
    <div class="main-content">
      <!-- Header (account) -->
      <%- include('partials/header'); %>
      <section class="pt-5 pt-lg-0">
        <div class="container">
          <div class="row">
            <div class="col-lg-4">
              <!-- Profile Card -->
              <%- include('partials/profile'); %>
            </div>
            <div class="col-lg-8 mt-lg-5">
              <!-- General information form -->
              <div class="actions-toolbar py-2 mb-4">
                <h5 class="mb-1">Post a new video</h5>
                <p class="text-sm text-muted mb-0">
                  You can help us, by filling your data, create you a much
                  better experience using our website.
                </p>
              </div>
              <form id="post-form">
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label class="form-control-label">Video Title</label>
                      <input
                        class="form-control"
                        type="text"
                        name="title"
                        required
                        id="title"
                        placeholder="Enter your post title"
                      />
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label class="form-control-label">Video SubTitle</label>
                      <textarea
                        class="form-control"
                        type="text"
                        name="subTitle"
                        required
                        rows="2"
                        id="subTitle"
                        placeholder="Enter your post subtitle"
                      ></textarea>
                    </div>
                  </div>
                </div>

                <!-- Video -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label mb-3"
                        >Video Thumbnail</label
                      >
                      <input
                        type="file"
                        id="video-thumbnail"
                        accept="image/*"
                        class="custom-input-file"
                      />
                      <label for="video-thumbnail">
                        <i class="fa fa-upload"></i>
                        <span>Choose a file…</span>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label mb-3">Video File</label>
                      <input
                        type="file"
                        id="video"
                        accept="video/*"
                        class="custom-input-file"
                      />
                      <label for="video">
                        <i class="fa fa-upload"></i>
                        <span>Choose a file…</span>
                      </label>
                    </div>
                  </div>
                </div>

                <!-- Description -->
                <div class="mt-5 delimiter-top">
                  <div class="actions-toolbar py-2 mb-4">
                    <h5 class="mb-1">Video Description</h5>
                    <p class="text-sm text-muted mb-0">
                      Use this field to enter about your video content
                    </p>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <div id="div_editor1"></div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Save changes buttons -->
                <div class="pt-5 mt-5 delimiter-top text-center">
                  <input
                    type="submit"
                    class="btn btn-sm btn-primary"
                    value="Save changes"
                  />
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Error Modal -->

    <div
      class="modal modal-danger"
      id="errorModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="errorModal"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title h6" id="modal_title_6">
              Something went wrong
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="py-3 text-center">
              <i class="fas fa-frown fa-4x"></i>
              <h5 class="heading h4 mt-4">We're Sorry</h5>
              <p>
                Something went wrong while trying to process your request.
                Kindly try again later.
              </p>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              onclick="window.location.reload(true)"
              class="btn btn-sm btn-white"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Modal -->

    <div
      class="modal"
      id="loadingModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      data-backdrop="static"
      data-keyboard="false"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <div class="row justify-content-center">
              <div class="col-auto">
                <div class="spinner-grow text-" role="status">
                  <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-" role="status">
                  <span class="sr-only">Loading...</span>
                </div>
                <div class="spinner-grow text-" role="status">
                  <span class="sr-only">Loading...</span>
