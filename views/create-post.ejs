<script>
  const uploadFile = async (file) => {
    // 1. Get pre-signed url for the file-name file-type
    // 2. Make a PUT request to that pre-signed with the body = file => Initiate the upload on s3

    try {
      const urlRes = await fetch(
        `/upload/presignedUrl?fileName=${file.name}&fileType=${file.type}`,
        {
          method: "GET",
        }
      );

      const urlData = await urlRes.json();

      const { url, fileName } = urlData;

      const uploadResponse = await fetch(url, {
        method: "PUT",
        headers: {
          "Content-Type": file.type,
        },
        body: file,
      });

      return {
        uploadResponse,
        fileName,
      };
    } catch (error) {
      console.log(error);
      $("#loadingModal").modal("hide");
      $("#errorModal").modal("show");
    }
  };
</script>

<script>
  const form = document.querySelector("form");
  //   const message = document.querySelector("#message");

  form.addEventListener("submit", async (event) => {
    event.preventDefault();
    $("#loadingModal").modal("show");
    $("#successModal").modal("hide");
    $("#errorModal").modal("hide");
    // Make sure the file type matches the content-type of your pre-signed URL

    try {
      const videoThumbnail = document.querySelector("#video-thumbnail");

      let thumbnailUploadResponse, thumbnailKeyName;

      if (videoThumbnail.files.length > 0) {
        const { uploadResponse, fileName } = await uploadFile(
          videoThumbnail.files[0]
        );
        thumbnailUploadResponse = uploadResponse;
        thumbnailKeyName = fileName;
        console.log("THUMBNAIL", uploadResponse, fileName);
      }

      let videoUploadResponse, videoKeyName;

      const video = document.querySelector("#video");
      if (video.files.length > 0) {
        const { uploadResponse, fileName } = await uploadFile(video.files[0]);

        videoUploadResponse = uploadResponse;
        videoKeyName = fileName;
        console.log("VIDEO", uploadResponse, fileName);
      }

      const newPost = {
        title: form.title.value,
        subTitle: form.subTitle.value,
        description: editor1.getHTMLCode(),
      };

      if (videoUploadResponse.ok) {
        newPost.video = `https://dt7hj5bw4w6bv.cloudfront.net/${videoKeyName}`;
      }

      if (thumbnailUploadResponse.ok) {
        newPost.thumbnail = `https://dt7hj5bw4w6bv.cloudfront.net/${thumbnailKeyName}`;
      }

      const response = await fetch("/post/create", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(newPost),
      });
      const data = await response.json();
      if (data.id) {
        $("#loadingModal").modal("hide");
        $("#successModal").modal("show");
      } else {
        $("#loadingModal").modal("hide");
        $("#errorModal").modal("show");
      }
    } catch (error) {
      console.log(error);
      $("#loadingModal").modal("hide");
      $("#errorModal").modal("show");
    }
  });
</script>
