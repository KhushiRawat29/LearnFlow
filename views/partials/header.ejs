<section
  class="header-account-page d-flex align-items-end"
  style="
    background-image: linear-gradient(
        to bottom,
        rgba(245, 246, 252, 0.52),
        rgba(82, 72, 79, 0.73)
      ),
      url('/cstm-assets/hero-2.jpg');
    background-position: center;
    background-size: cover;
  "
  data-offset-top="#header-main"
>
  <!-- Header container -->
  <div class="container pt-4 pt-lg-0">
    <div class="row justify-content-end">
      <div class="col-lg-8">
        <!-- Salute + Small stats -->
        <div
          class="row align-items-center mb-4 bg-primary"
          style="
            width: 40% !important;
            display: block;
            border: 5px solid black;
            border-radius: 20px !important;
            padding: 20px;
          "
        >
          <div
            class="col-lg-8 col-xl-5 mb-4 mb-md-0"
            style="max-width: 100% !important"
          >
            <span class="h2 mb-0 text-white d-block"
              >Howdy, <%= user.displayName %></span
            >
            <span class="text-white">Have a nice day!</span>
          </div>
        </div>
        <!-- Account navigation -->
        <div class="d-flex">
          <a
            href="/profile"
            class="btn btn-icon btn-group-nav shadow btn-neutral"
          >
            <span class="btn-inner--icon"><i class="fas fa-user"></i></span>
            <span class="btn-inner--text d-none d-md-inline-block"
              >My Profile</span
            >
          </a>
          <div
            class="btn-group btn-group-nav shadow ml-auto"
            role="group"
            aria-label="Basic example"
          >
            <div
              class="btn-group"
              role="group"
              style="transform: translateY(-50%)"
            >
              <% if(user.role===0) { %>
              <a
                href="/post/create"
                class="btn btn-icon btn-group-nav shadow btn-neutral"
              >
                <span class="btn-inner--icon"><i class="fas fa-edit"></i></span>
                <span class="btn-inner--text d-none d-md-inline-block"
                  >Create Post</span
                >
              </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
